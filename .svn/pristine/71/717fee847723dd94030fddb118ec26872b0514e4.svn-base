<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_f"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">
    <TextView
        android:id="@+id/tv_order_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tv_order_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥58.08"
        android:textSize="15sp"
        android:textColor="@color/color_3"/>
    <TextView
        android:id="@+id/tv_pay_account_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_order_amount"
        android:layout_marginTop="2dp"
        android:textColor="@color/color_6"
        android:textSize="14dp"
        android:text="付款账号："/>
    <TextView
        android:id="@+id/tv_pay_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_pay_account_info"
        android:layout_toRightOf="@+id/tv_pay_account_info"
        android:textColor="@color/color_6"
        android:textSize="14sp"
        android:ellipsize="end"
        android:maxEms="18"
        android:maxLines="1"
        android:text="chendafu@163.com"
/>
    <TextView
        android:id="@+id/tv_order_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_pay_account_info"
        android:layout_marginTop="2dp"
        android:textColor="@color/color_9"
        android:textSize="15sp"
        android:text="2017-6-21 17:10:11"/>
    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_more"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/tv_order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_more"
        android:layout_marginRight="3dp"
        android:textColor="@color/color_6"
        android:textSize="14sp"
        android:text="待结算"
            />
</RelativeLayout>