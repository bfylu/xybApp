<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_f2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical"
        android:background="@color/color_f">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12">

            <ImageView
                android:id="@+id/iv_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_message"/>

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_msg"
                android:text="12345678910"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/color_6"/>

            <TextView
                android:id="@+id/tv_order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="12345678910"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/color_6"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="2018-05-16 12:12:12"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_9"/>

            <TextView
                android:id="@+id/tv_order_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="12345678910"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_9"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/color_ed"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12">

            <ImageView
                android:id="@+id/iv_goods_img"
                android:layout_width="@dimen/dp_93"
                android:layout_height="@dimen/dp_93"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_93"
                android:layout_marginLeft="@dimen/dp_15"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/iv_goods_img">

                <TextView
                    android:id="@+id/tv_goods_content"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/account_current_merchant"
                    android:textSize="@dimen/sp_15"
                    android:text="你好啊你好啊你好啊你好啊你好啊你好啊"
                    android:maxLines="2"
                    android:ellipsize="end"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingRight="@dimen/dp_12">

                    <TextView
                        android:id="@+id/tv_goods_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥100"
                        android:textSize="@dimen/sp_15"
                        android:textColor="@color/color_9"/>

                    <TextView
                        android:id="@+id/tv_goods_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="X1"
                        android:textSize="@dimen/sp_15"
                        android:textColor="@color/color_9"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">

            <TextView
                android:id="@+id/tv_goods_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共1件"
                android:textColor="@color/color_6"
                android:textSize="@dimen/sp_13"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="@string/total_price"
                android:textColor="@color/color_6"
                android:textSize="@dimen/sp_13"/>

            <TextView
                android:id="@+id/tv_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.01"
                android:textColor="@color/color_3"
                android:textSize="@dimen/sp_15"/>

            <TextView
                android:id="@+id/tv_have_freight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(免运费)"
                android:textColor="@color/color_9"
                android:textSize="@dimen/sp_13"/>

            <TextView
                android:id="@+id/tv_refund_status"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:text="退款成功"
                android:visibility="gone"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_ff6701"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/color_ed"/>

        <RelativeLayout
            android:id="@+id/rl_order_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12">

            <ImageView
                android:id="@+id/iv_order_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_close"/>

            <TextView
                android:id="@+id/tv_order_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_toRightOf="@+id/iv_order_type"
                android:layout_centerVertical="true"
                android:text="@string/close"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>