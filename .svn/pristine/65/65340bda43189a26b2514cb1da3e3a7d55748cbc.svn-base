<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:payadd="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_bind_card"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/shape_bind_card"
        >
        <cn.payadd.majia.view.DrawableTextView
            android:id="@+id/dtv_bind_card"
            android:layout_width="182dp"
            android:layout_height="58dp"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_no_enabled"
            android:clickable="true"
            android:drawableLeft="@mipmap/icon_addcard"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="绑定银行卡"
            android:textColor="@color/color_9"
            android:textSize="16sp" />
        <TextView
            android:layout_marginTop="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dtv_bind_card"
            android:layout_centerHorizontal="true"
            android:text="您还未绑定银行卡"/>
    </RelativeLayout>
 </LinearLayout>