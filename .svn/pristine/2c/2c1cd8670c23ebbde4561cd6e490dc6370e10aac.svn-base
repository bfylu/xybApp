<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/iv_dialog_dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_clear"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:text="关于商家收款"
        android:layout_gravity="center"
        android:textColor="@color/color_3"
        android:textSize="17sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:text="收款越多，收益越高"
        android:textColor="@color/color_3"
        android:textSize="16sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:text="1.使用PAY+扫码牌收款，消费者付款完成跳转至支付完成页后，有效点击广告，商家均可获得一定的比例的收益；"
        android:lineSpacingExtra="3dp"
        android:textSize="15sp"
        android:textColor="@color/color_3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="2.同一个消费者，当天多次付款，商家只能获得一次收益。"
        android:lineSpacingExtra="3dp"
        android:textSize="15sp"
        android:textColor="@color/color_3"/>

    <Button
        android:id="@+id/btn_dialog_dismiss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="知道了"
        android:textSize="15sp"
        android:textColor="@color/btn_clickable"
        android:background="@color/color_lucency"/>
</LinearLayout>