<resources>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <!-- 设置未浮动窗口 -->
        <item name="android:windowFrame">@null</item>
        <!-- 设置无边框 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置无标题 -->
        <item name="android:windowBackground">@color/sc_transparent_background</item>
        <!-- 设置完全透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 设置屏幕变暗 -->
    </style>

    <style name="transparentFrameWindowStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/choose_bg</item>
    </style>

    <style name="main_menu_animstyle">
        <!--进入效果-->
        <item name="android:windowEnterAnimation">@anim/dialog_in_anim</item>
        <!--退出效果-->
        <item name="android:windowExitAnimation">@anim/dialog_out_anim</item>
    </style>
</resources>
