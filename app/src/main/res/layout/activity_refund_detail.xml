<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background">
    <include
        android:id="@+id/include_title"
        layout="@layout/include_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y150" />

    <LinearLayout
        android:layout_below="@+id/include_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@color/color_f">

            <TextView
                android:id="@+id/label_trade_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="交易金额："
                android:textColor="@color/color_3"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tv_trade_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/label_trade_amount"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:text="5.00"
                android:textColor="@color/red_2"
                />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:background="@color/color_f"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rl_mer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/label_merchant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商家名称："
                    android:textSize="15sp"
                    android:textColor="@color/color_6"/>
                <TextView
                    android:id="@+id/tv_merchant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/label_merchant_name"
                    android:text="XXX商户名称"
                    android:textSize="15sp"
                    android:textColor="@color/color_3"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_pay_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/label_pay_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付状态："
                    android:textSize="15sp"
                    android:textColor="@color/color_6"/>
                <TextView
                    android:id="@+id/tv_pay_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/label_pay_status"
                    android:text="支付成功"
                    android:textSize="15sp"
                    android:textColor="@color/color_success"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_pay_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/label_pay_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付类型："
                    android:textSize="15sp"
                    android:textColor="@color/color_6"/>
                <TextView
                    android:id="@+id/tv_pay_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/label_pay_type"
                    android:text="微信支付"
                    android:textSize="15sp"
                    android:textColor="@color/color_3"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/label_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收款产品："
                    android:textSize="15sp"
                    android:textColor="@color/color_6"/>
                <TextView
                    android:id="@+id/tv_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/label_product"
                    android:text="码夹APP"
                    android:textSize="15sp"
                    android:textColor="@color/color_3"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_cashier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">
                <TextView
                    android:id="@+id/label_cashier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收  银  员："
                    android:textSize="15sp"
                    android:textColor="@color/color_6"/>
                <TextView
                    android:id="@+id/tv_cashier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/label_cashier"
                    android:text=""
                    android:textSize="15sp"
                    android:textColor="@color/color_3"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_refund_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/label_refund_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退款单号："
                    android:textSize="15sp"
                    android:textColor="@color/color_6"/>
                <TextView
                    android:id="@+id/tv_refund_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/label_refund_no"
                    android:text="345293574326934560"
                    android:textSize="15sp"
                    android:textColor="@color/color_3"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_refund_no"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/icon_copy"

                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_trade_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/label_trade_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交易单号："
                    android:textSize="15sp"
                    android:textColor="@color/color_6"/>
                <TextView
                    android:id="@+id/tv_trade_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/label_trade_no"
                    android:text="345293574326934560"
                    android:textSize="15sp"
                    android:textColor="@color/color_3"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_trade_no"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/icon_copy"

                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_trade_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/label_trade_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交易日期："
                    android:textSize="15sp"
                    android:textColor="@color/color_6"/>
                <TextView
                    android:id="@+id/tv_trade_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/label_trade_time"
                    android:text="2017-07-09 10:31:22"
                    android:textSize="15sp"
                    android:textColor="@color/color_3"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y30"
        android:layout_alignParentBottom="true"
        android:background="@drawable/selector_btn_refund"
        android:text="@string/pay_logout"
        android:textColor="@color/selected_color"
        android:textSize="15sp"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:visibility="gone">
    <Button
        android:id="@+id/btn_choose_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y30"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:background="@drawable/selector_btn_refund"
        android:text="@string/pay_logout"
        android:textColor="@color/selected_color"
        android:textSize="15sp"/>
        <Button
            android:id="@+id/btn_choose_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y30"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_print"
            android:text="打印小票"
            android:textColor="@color/account_title"
            android:textSize="15sp"/>

  </LinearLayout>

</RelativeLayout>