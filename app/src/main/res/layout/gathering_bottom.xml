    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x120"
        android:layout_marginTop="@dimen/y20"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:id="@+id/image_scan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/scancode_un" />

        <ImageView
            android:id="@+id/image_qrcode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/erweima_un" />

        <ImageView
            android:id="@+id/image_unionpay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:src="@mipmap/slotcard_un" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_gain_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y100"
        android:layout_marginLeft="@dimen/x200"
        android:layout_marginRight="@dimen/x200"
