<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f2">

    <include
        android:id="@+id/include_title"
        layout="@layout/include_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y150" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_f"
        android:paddingTop="@dimen/dp_17"
        android:paddingBottom="@dimen/dp_30"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_pwd_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="@string/input_new_merchant_pwd"
            android:textColor="@color/account_current_merchant"
            android:textSize="@dimen/sp_17" />

        <cn.payadd.majia.view.PasswordInputView
            android:id="@+id/passwordInputView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_27"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:background="@null"
            android:cursorVisible="false"
            android:inputType="number"
            app:borderColor="@color/color_ed"
            app:passwordBackgroundColor="@color/color_f2"
            app:borderRadius="0dp"
            app:borderWidth="@dimen/dp_0.5"
            app:passwordColor="@color/account_current_merchant"
            app:passwordLength="6"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_12"
        android:text="@string/merchant_pwd_remind"
        android:textColor="@color/color_9"
        android:textSize="@dimen/sp_15" />

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_60"
        android:layout_marginLeft="@dimen/dp_60"
        android:visibility="gone"
        android:text="@string/sure"
        android:textColor="@color/color_f"
        android:background="@drawable/shape_btn_no_enable"/>

</LinearLayout>