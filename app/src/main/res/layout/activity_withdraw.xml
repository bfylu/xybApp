<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:payadd="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical">
    <include
        android:id="@+id/include_title"
        layout="@layout/include_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y150" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/lab_card_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="到账账户"
                android:textColor="@color/color_6"
                android:textSize="15sp"
                />

            <RelativeLayout
                android:id="@+id/rl_card_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:layout_toRightOf="@+id/lab_card_area"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_card_no"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:maxLines="1"
                    android:textColor="@color/color_3"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:textAlignment="gravity"
                    android:hint="请选择提现到账账户"
                    android:textColorHint="@color/color_9"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_more_2"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="13dp"
                android:background="@color/gray4"/>
        </RelativeLayout>

    <cn.payadd.majia.view.CommonEditText
        android:id="@+id/cet_amount"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        payadd:edit_text_hint="请输入提现金额"
        payadd:cet_input_mode="number"
        payadd:left_text="提现金额  ￥"
        payadd:left_text_visible="true">

    </cn.payadd.majia.view.CommonEditText>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="9dp">
        <TextView
            android:id="@+id/lab_can_withdraw_amt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可提现金额："
            android:layout_alignParentLeft="true"
            android:textSize="15sp"
            android:textColor="@color/gray5"/>
        <TextView
            android:id="@+id/tv_can_withdraw_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text=""
            android:layout_toRightOf="@id/lab_can_withdraw_amt"
            android:textColor="@color/gray5"/>
        <TextView
            android:id="@+id/tv_all_withdraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="全部提现"
            android:layout_alignParentRight="true"
            android:textColor="@color/selected_color"/>
    </RelativeLayout>
    <Button
        android:id="@+id/btn_withdraw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:enabled="false"
        android:text="提现"
        android:background="@drawable/selector_btn_press"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="提现金额需大于或等于100元"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/color_9"/>
    </LinearLayout>
</LinearLayout>