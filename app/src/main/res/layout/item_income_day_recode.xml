<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/profitRecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_income_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="广告收益"
            android:textColor="@color/color_6"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_income_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="15:54:14"
            android:textColor="@color/color_9"
            android:textSize="15sp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        >

        <TextView
            android:id="@+id/tv_add_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text=""
            android:textColor="@color/color_6"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/tv_income_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_add_symbol"
            android:text="￥120.00"
            android:textColor="@color/color_6"
            android:textSize="15dp"/>
    </RelativeLayout>
    </RelativeLayout>
</LinearLayout>