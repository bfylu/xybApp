<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:lineSpacingExtra="3dp"
        android:text="1.使用电脑登录支付宝商家后台:"
        android:textColor="@color/color_3"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:id="@+id/tv_pid_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3dp"
            android:text="https://openhome.alipay.com/platform/keyManage.htm?keyType=partner"
            android:textColor="@color/color_3"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/clipboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3dp"
            android:text="复制链接"
            android:textColor="@color/blue3"
            android:textSize="13sp"
            android:layout_alignBottom="@+id/tv_pid_url"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:lineSpacingExtra="3dp"
        android:text="2.如下图，将合作伙伴身份(PID)复制，再填入绑定(如您还不不是支付宝商家，需要先认证成为商家后才能查看。)"
        android:textColor="@color/color_3"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/images_pid"

        />

    <Button
        android:id="@+id/btn_dialog_dismiss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_lucency"
        android:text="知道了"
        android:textColor="@color/btn_clickable"
        android:textSize="15sp" />
</LinearLayout>