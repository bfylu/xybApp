            android:layout_gravity="center_horizontal"
            android:src="@mipmap/home_un"/>

        <TextView
            android:id="@+id/text_home"
            style="@style/tab_menu_text"
            android:layout_gravity="center_horizontal"
            android:text="@string/first"/>
        </LinearLayout>
