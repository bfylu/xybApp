<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/commonTabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/ai_store_title"
        tl:tl_indicator_color="@color/color_Home"
        tl:tl_tab_padding="@dimen/y30"
        tl:tl_tab_space_equal="true"
        tl:tl_textAllCaps="true"
        tl:tl_textSelectColor="@color/color_gold"
        tl:tl_textUnselectColor="@color/color_f"
        tl:tl_textsize="@dimen/sp_15"
        tl:tl_iconGravity="RIGHT"
        tl:tl_iconMargin="@dimen/dp_10"/>

    <cn.payadd.majia.view.CustomViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>