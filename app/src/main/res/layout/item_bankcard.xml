<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_bankcard_pink">

    <ImageView
        android:id="@+id/iv_bank_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:src="@mipmap/bank_logo_gs"/>
    <ImageView
        android:id="@+id/iv_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_choose"
        android:layout_alignBottom="@+id/iv_bank_icon"
        android:layout_marginLeft="40dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tv_bank_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="招商银行"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="14dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_toRightOf="@id/iv_bank_icon"/>
    <TextView
        android:id="@+id/tv_card_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="借记卡"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="6dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_toRightOf="@id/iv_bank_icon"
        android:layout_below="@+id/tv_bank_name"/>
    <TextView
        android:id="@+id/tv_card_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6227 **** **** **** 152"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_toRightOf="@id/iv_bank_icon"
        android:layout_below="@+id/tv_card_type"
        />
</RelativeLayout>