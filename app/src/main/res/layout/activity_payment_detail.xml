<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background">
    <include
        android:id="@+id/include_title"
        layout="@layout/include_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y150" />

    <LinearLayout
        android:layout_below="@+id/include_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@color/color_f">

            <TextView
                android:id="@+id/label_trade_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/terminal_amount"
                android:textColor="@color/color_3"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tv_trade_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/label_trade_amount"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:text=""
                android:textColor="@color/red_2"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/color_f2"/>

        <RelativeLayout
            android:id="@+id/rl_refund_amount"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:visibility="gone"
            android:background="@color/color_f">

            <TextView
                android:id="@+id/label_refund_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/refund_amount2"
                android:textColor="@color/color_3"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tv_refund_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/label_refund_amount"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:text=""
                android:textColor="@color/red_2"
                />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:background="@color/color_f"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rl_mer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/label_merchant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/door_man"
                    android:textSize="15sp"
                    android:textColor="@color/color_6"/>
                <TextView
                    android:id="@+id/tv_merchant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/label_merchant_name"
                    android:text=""
                    android:textSize="15sp"
                    android:textColor="@color/color_3"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_pay_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/label_pay_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pay_state"
                    android:textColor="@color/color_6"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_pay_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/label_pay_status"
                    android:text=""
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_pay_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/label_pay_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pay_type"
                    android:textSize="15sp"
                    android:textColor="@color/color_6"/>
                <TextView
                    android:id="@+id/tv_pay_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/label_pay_type"
                    android:text=""
                    android:textSize="15sp"
                    android:textColor="@color/color_3"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/label_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pay_product"
                    android:textSize="15sp"
                    android:textColor="@color/color_6"/>
                <TextView
                    android:id="@+id/tv_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/label_product"
                    android:text=""
                    android:textSize="15sp"
                    android:textColor="@color/color_3"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_cashier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">
                <TextView
                    android:id="@+id/label_cashier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收  银  员："
                    android:textSize="15sp"
                    android:textColor="@color/color_6"/>
                <TextView
                    android:id="@+id/tv_cashier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/label_cashier"
                    android:text=""
                    android:textSize="15sp"
                    android:textColor="@color/color_3"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_orig_order_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:visibility="gone">
                <TextView
                    android:id="@+id/label_orig_order_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关联单号："
                    android:textSize="15sp"
                    android:textColor="@color/color_6"
                    />
                <TextView
                    android:id="@+id/tv_orig_order_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/label_orig_order_no"
                    android:text="345293574326934560"
                    android:textSize="15sp"
                    android:textColor="@color/color_3"/>
                <ImageView
                    android:id="@+id/orig_order_no_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_orig_order_no"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/icon_copy"

                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_trade_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/label_trade_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交易单号："
                    android:textSize="15sp"
                    android:textColor="@color/color_6"/>
                <TextView
                    android:id="@+id/tv_trade_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/label_trade_no"
                    android:text=""
                    android:textSize="15sp"
                    android:textColor="@color/color_3"/>
                <ImageView
                    android:id="@+id/trade_no_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_trade_no"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/icon_copy"

                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_trade_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/label_trade_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交易日期："
                    android:textSize="15sp"
                    android:textColor="@color/color_6"/>
                <TextView
                    android:id="@+id/tv_trade_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/label_trade_time"
                    android:text=""
                    android:textSize="15sp"
                    android:textColor="@color/color_3"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <!--条件底部-->
    <LinearLayout
        android:id="@+id/pos_pay_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
    <Button
        android:id="@+id/btn_refund"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:background="@drawable/selector_btn_refund"
        android:text="@string/pay_logout"
        android:textColor="@color/selected_color"
        android:textSize="15sp"
        android:visibility="gone"/>
        <Button
            android:id="@+id/btn_pos_print"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_print"
            android:text="打印小票"
            android:textColor="@color/account_title"
            android:textSize="15sp"
            android:visibility="gone"/>
        <Button
            android:id="@+id/btn_check_order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_print"
            android:text="查看收款单"
            android:textColor="@color/account_title"
            android:textSize="15sp"
            android:visibility="gone"/>

  </LinearLayout>
</RelativeLayout>