<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_background"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="92dp"
            android:layout_marginBottom="40dp"
            android:src="@mipmap/xyb_logo"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="29dp"
        android:layout_marginLeft="29dp"
        android:layout_marginBottom="5dp"
        >
        <ImageView
            android:id="@+id/icon_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginRight="1dp"
            android:src="@mipmap/icon_user"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"

            />
        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon_user"
            android:hint="手机号码/用户名/邮箱"
            android:textColorHint="@color/gray2"
            android:textSize="15sp"
            android:maxLines="1"
            />
        <ImageView
            android:id="@+id/iv_user_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_clear"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp"
            />
        </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="29dp"
        android:layout_marginLeft="29dp"
        android:layout_marginBottom="5dp"
        >
        <ImageView
            android:id="@+id/icon_passwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginRight="1dp"
            android:src="@mipmap/icon_key"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"

            />
        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon_passwd"
            android:hint="请输入登录密码"
            android:textColorHint="@color/gray2"
            android:inputType="textPassword"
            android:textSize="15sp"
            android:maxLines="1"
            />
        <ImageView
            android:id="@+id/iv_password_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_clear"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_check_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="29dp"
        android:layout_marginLeft="29dp"
        android:layout_marginBottom="14dp"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/icon_check_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginRight="1dp"
            android:src="@mipmap/icon_code_1"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"

            />
        <EditText
            android:id="@+id/et_check_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon_check_code"
            android:hint="请输入图形验证码"
            android:textColorHint="@color/gray2"
            android:maxLines="1"
            android:textSize="15sp"
            android:layout_toLeftOf="@+id/iv_check_code"
            />
        <ImageView
            android:id="@+id/iv_check_code"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@color/btn_unclickable"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp"
            />
    </RelativeLayout>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29dp"
        android:text="记住密码"
        android:textColor="@color/gray1" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="29dp"
        android:background="@drawable/selector_btn_press"
        android:text="登录"
        android:textColor="@color/btn_text"
        android:textSize="16sp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="29dp"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="注册"
            android:textSize="15sp"
            android:textColor="@color/cyan"/>
        <TextView
            android:id="@+id/tv_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="忘记密码?"
            android:textSize="15sp"
            android:textColor="@color/gray1"/>
    </RelativeLayout>
</LinearLayout>