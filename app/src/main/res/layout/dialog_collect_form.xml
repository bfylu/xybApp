<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="汇总单"
        android:textSize="17sp"
        android:textColor="@color/color_3"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/lab_mer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商家"
            android:textSize="15sp"
            android:textColor="@color/color_3"
            />
        <TextView
            android:id="@+id/tv_mer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp"
            android:textColor="@color/color_3"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
    <View
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layerType="software"
        android:background="@color/btn_cancel2"
        android:layout_below="@+id/lab_mer_no"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/lab_total_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易总额："
            android:textSize="15sp"
            android:textColor="@color/color_3"
            />
        <TextView
            android:id="@+id/tv_total_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp"
            android:textColor="@color/color_3"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/lab_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信支付："
            android:textSize="15sp"
            android:textColor="@color/color_3"
            />
        <TextView
            android:id="@+id/tv_weixin_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp"
            android:textColor="@color/color_3"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/lab_alipay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝："
            android:textSize="15sp"
            android:textColor="@color/color_3"
            />
        <TextView
            android:id="@+id/tv_alipay_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp"
            android:textColor="@color/color_3"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_orig_order_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:visibility="gone">
        <TextView
            android:id="@+id/lab_ass_trade_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关联单号："
            android:textSize="15sp"
            android:textColor="@color/color_6"
            />
        <TextView
            android:id="@+id/tv_ass_trade_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp"
            android:textColor="@color/color_3"
            android:layout_toRightOf="@+id/lab_ass_trade_no"/>
    </RelativeLayout>
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/lab_unionpay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="银联："
            android:textSize="15sp"
            android:textColor="@color/color_3"
            />
        <TextView
            android:id="@+id/tv_unionpay_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp"
            android:textColor="@color/color_3"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layerType="software"
        android:background="@color/btn_cancel2"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/lab_trade_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易笔数："
            android:textSize="15sp"
            android:textColor="@color/color_3"
            />
        <TextView
            android:id="@+id/tv_trade_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp"
            android:textColor="@color/color_3"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layerType="software"
        android:background="@color/btn_cancel2"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/lab_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收款产品："
            android:textSize="15sp"
            android:textColor="@color/color_3"
            />
        <TableLayout
            android:id="@+id/tl_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            >

        </TableLayout>

    </RelativeLayout>
    <View
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layerType="software"
        android:background="@color/btn_cancel2"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/lab_date_scope"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日期范围："
            android:textSize="15sp"
            android:textColor="@color/color_3"
            />
        <TextView
            android:id="@+id/tv_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-08-07 16：33：55"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_3"/>
        <TextView
            android:id="@+id/tv_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/tv_start_time"
            android:text="2017-08-07 17：33：55"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_3"
            />


    </RelativeLayout>
    <View
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layerType="software"
        android:background="@color/btn_cancel2"
        android:layout_below="@+id/lab_mer_no"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/lab_print_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打印日期："
            android:textSize="15sp"
            android:textColor="@color/color_3"
            />
        <TextView
            android:id="@+id/tv_prin_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-08-07 16：33：55"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_3"/>


    </RelativeLayout>

</LinearLayout>